{
  "version": "1.0.0",
  "description": "Agent tools configuration for Claudify - adapts to project tech stack",
  "agents": {
    "security-reviewer": {
      "description": "Security vulnerability scanning and compliance checking",
      "tools": {
        "node": ["npm audit", "snyk", "eslint-plugin-security"],
        "dotnet": ["dotnet list package --vulnerable", "OWASP dependency-check"],
        "python": ["bandit", "safety", "pip-audit"],
        "general": ["git-secrets", "trufflehog"]
      },
      "scripts": ["security-scan.ps1"],
      "capabilities": [
        "dependency_vulnerability_scan",
        "code_security_analysis",
        "secrets_detection",
        "compliance_checking"
      ]
    },
    "tech-lead": {
      "description": "Architecture analysis and technical debt assessment",
      "tools": {
        "node": ["madge", "dependency-cruiser", "depcheck"],
        "dotnet": ["ArchUnit.NET", "NDepend", "dotnet-outdated"],
        "python": ["pydeps", "import-linter", "vulture"],
        "general": ["cloc", "tokei"]
      },
      "scripts": ["analyze-architecture.ps1"],
      "capabilities": [
        "dependency_graph_analysis",
        "circular_dependency_detection",
        "architecture_compliance",
        "complexity_metrics"
      ]
    },
    "code-reviewer": {
      "description": "Code quality and standards enforcement",
      "tools": {
        "node": ["nyc", "c8", "complexity-report"],
        "dotnet": ["dotnet-coverage", "SonarScanner", "StyleCop"],
        "python": ["coverage", "radon", "pylint"],
        "general": ["git diff --stat", "git log --oneline"]
      },
      "scripts": ["code-quality.ps1"],
      "capabilities": [
        "coverage_analysis",
        "complexity_scoring",
        "style_checking",
        "best_practices_validation"
      ]
    },
    "code-simplifier": {
      "description": "Complexity reduction and refactoring assistance",
      "tools": {
        "node": ["jscpd", "plato", "eslint --fix"],
        "dotnet": ["dotnet format", "Roslynator"],
        "python": ["autopep8", "black", "isort"],
        "general": ["prettier", "editorconfig"]
      },
      "scripts": ["analyze-complexity.ps1"],
      "capabilities": [
        "duplicate_detection",
        "complexity_visualization",
        "auto_formatting",
        "refactoring_suggestions"
      ]
    },
    "ux-reviewer": {
      "description": "User experience and accessibility validation",
      "tools": {
        "web": ["axe-core", "lighthouse", "pa11y", "wave"],
        "mobile": ["accessibility-insights", "talkback"],
        "general": ["contrast-checker", "screen-reader-simulator"]
      },
      "scripts": ["ux-analysis.ps1"],
      "capabilities": [
        "wcag_compliance_check",
        "performance_metrics",
        "color_contrast_validation",
        "keyboard_navigation_test"
      ]
    },
    "researcher": {
      "description": "Documentation analysis and knowledge extraction",
      "tools": {
        "node": ["typedoc", "jsdoc", "documentation.js"],
        "dotnet": ["docfx", "xmldoc2md", "Sandcastle"],
        "python": ["sphinx", "pydoc", "mkdocs"],
        "general": ["mermaid-cli", "plantuml"]
      },
      "scripts": ["research.ps1"],
      "capabilities": [
        "api_documentation_generation",
        "code_pattern_analysis",
        "dependency_research",
        "knowledge_graph_creation"
      ]
    },
    "infrastructure-architect": {
      "description": "Cloud infrastructure and deployment analysis",
      "tools": {
        "azure": ["az cli", "Azure Resource Graph", "Azure Advisor"],
        "aws": ["aws cli", "AWS Cost Explorer", "AWS Well-Architected Tool"],
        "kubernetes": ["kubectl", "kube-score", "polaris"],
        "general": ["terraform", "ansible-lint", "docker-bench-security"]
      },
      "scripts": [
        "analyze-azure-costs.ps1",
        "analyze-k8s-security.ps1",
        "generate-k8s-manifest.ps1"
      ],
      "capabilities": [
        "cost_optimization",
        "security_posture_assessment",
        "scalability_analysis",
        "deployment_automation"
      ]
    },
    "technical-debt-analyst": {
      "description": "Technical debt identification and prioritization",
      "tools": {
        "node": ["npm-check", "depcheck", "ncu"],
        "dotnet": ["dotnet-outdated", "NuGet Package Explorer"],
        "python": ["pip-review", "pipdeptree", "pyupgrade"],
        "general": ["gitleaks", "better-code-hub"]
      },
      "scripts": [
        "complexity-analyzer.ps1",
        "package-analyzer.ps1"
      ],
      "capabilities": [
        "outdated_dependency_detection",
        "complexity_debt_calculation",
        "security_debt_assessment",
        "refactoring_prioritization"
      ]
    }
  },
  "global_settings": {
    "output_format": "json",
    "verbose_logging": false,
    "parallel_execution": true,
    "cache_results": true,
    "cache_ttl_minutes": 60
  },
  "tech_stack_detection": {
    "patterns": {
      "node": ["package.json", "node_modules", "*.js", "*.ts"],
      "dotnet": ["*.csproj", "*.sln", "*.cs"],
      "python": ["requirements.txt", "setup.py", "*.py"],
      "java": ["pom.xml", "build.gradle", "*.java"]
    }
  }
}
{
  "name": "claudify-project-analyzer",
  "version": "1.0.0",
  "description": "Analyzes .NET/Angular projects to extract conventions and patterns",
  "main": "dist/project-analyzer.bundle.js",
  "bin": {
    "claudify-analyze": "dist/project-analyzer.bundle.js"
  },
  "scripts": {
    "build": "esbuild src/cli.ts --bundle --platform=node --target=node18 --outfile=dist/project-analyzer.bundle.js --external:fsevents",
    "dev": "ts-node src/cli.ts",
    "test": "jest",
    "lint": "eslint src/**/*.ts"
  },
  "keywords": [
    "claudify",
    "project-analyzer",
    "code-analysis",
    "dotnet",
    "angular"
  ],
  "author": "Claudify",
  "license": "MIT",
  "dependencies": {
    "glob": "^10.3.10"
  },
  "devDependencies": {
    "@types/node": "^20.11.5",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "esbuild": "^0.19.12",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}

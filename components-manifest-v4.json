{
  "claudifyVersion": "4.0.0",
  "version": "4.0.0",
  "releaseDate": "2025-08-06",
  "lastUpdated": "2025-08-06",
  "minimumClaudeCodeVersion": "1.0.0",
  "architecture": "multi-framework",
  "plugins": {
    "enabled": true,
    "autoDetect": true,
    "installed": ["core", "frontend-angular", "backend-dotnet-mssql", "business-operations"],
    "available": ["frontend-react", "frontend-vue", "backend-nodejs", "backend-python", "database-postgresql", "database-mongodb"]
  },
  "frameworkMappings": {
    "core": {
      "path": "core",
      "description": "Technology-agnostic components (Engineering Support Department)",
      "alwaysInclude": true
    },
    "frontend-angular": {
      "path": "frameworks/frontend-angular",
      "manifest": "plugin-manifest.json",
      "description": "Angular frontend framework support"
    },
    "backend-dotnet-mssql": {
      "path": "frameworks/backend-dotnet-mssql",
      "manifest": "plugin-manifest.json",
      "description": ".NET backend with SQL Server support"
    },
    "business-operations": {
      "path": "frameworks/business-operations",
      "manifest": "plugin-manifest.json",
      "description": "Marketing and sales tools"
    }
  },
  "core": {
    "agents": [
      "code-reviewer",
      "security-reviewer",
      "tech-lead",
      "test-quality-analyst",
      "technical-debt-analyst",
      "infrastructure-architect",
      "researcher",
      "business-domain-analyst",
      "code-simplifier",
      "legacy-system-analyzer",
      "customer-value-translator",
      "feature-analyzer",
      "technical-documentation-expert"
    ],
    "commands": {
      "essential": [
        "comprehensive-review",
        "do-extensive-research",
        "quick-research",
        "create-command-and-or-agent",
        "agents",
        "init-claudify",
        "framework-management"
      ],
      "quality": [
        "analyze-technical-debt",
        "analyze-test-quality",
        "refactor-code",
        "optimize-performance"
      ],
      "documentation": [
        "generate-documentation",
        "update-changelog"
      ],
      "specialized": [
        "analyze-legacy-system",
        "analyze-domain-use-cases",
        "add-integration",
        "update-comprehensive-feature",
        "update-comprehensive-feature-no-backward-compatibility"
      ]
    },
    "hooks": [
      "add-context",
      "pre-commit-quality-check",
      "check-changelog-updates",
      "after-component-creation",
      "install-hooks"
    ],
    "generators": [
      "command-generator",
      "agent-generator",
      "hook-generator"
    ],
    "validation": [
      "architecture-validator",
      "code-quality-validator",
      "test-coverage-analyzer"
    ]
  },
  "backwardCompatibility": {
    "enabled": true,
    "mappings": {
      "agents": {
        "frontend-developer": "frameworks/frontend-angular/agents/angular-developer",
        "ux-reviewer": "frameworks/frontend-angular/agents/angular-ux-reviewer",
        "visual-designer": "frameworks/frontend-angular/agents/angular-visual-designer"
      },
      "commands": {
        "add-frontend-feature": "frameworks/frontend-angular/commands/add-angular-feature",
        "fix-frontend-bug": "frameworks/frontend-angular/commands/fix-angular-bug",
        "review-frontend-code": "frameworks/frontend-angular/commands/review-angular-code",
        "add-backend-feature": "frameworks/backend-dotnet-mssql/commands/add-dotnet-feature",
        "fix-backend-bug": "frameworks/backend-dotnet-mssql/commands/fix-dotnet-bug",
        "review-backend-code": "frameworks/backend-dotnet-mssql/commands/review-dotnet-code"
      }
    }
  },
  "selectionRules": {
    "minimal": {
      "description": "Core essentials only",
      "includes": [
        "core:agents:code-reviewer",
        "core:commands:essential:*",
        "core:commands:documentation:update-changelog",
        "core:hooks:add-context",
        "core:generators:command-generator"
      ]
    },
    "standard": {
      "description": "Recommended based on detected tech stack",
      "includes": [
        "minimal:*",
        "core:agents:security-reviewer",
        "core:agents:infrastructure-architect",
        "[detected-framework]:*",
        "core:commands:quality:analyze-technical-debt",
        "core:commands:documentation:generate-documentation",
        "core:generators:*",
        "core:hooks:pre-commit-quality-check"
      ]
    },
    "comprehensive": {
      "description": "Everything available including all frameworks",
      "includes": ["*"]
    }
  },
  "techStackDetection": {
    "frontend": {
      "angular": {
        "patterns": ["angular.json", "@angular/core", "*.component.ts"],
        "plugin": "frontend-angular"
      },
      "react": {
        "patterns": ["react", "*.tsx", "*.jsx", "create-react-app"],
        "plugin": "frontend-react"
      },
      "vue": {
        "patterns": ["vue", "*.vue", "nuxt.config"],
        "plugin": "frontend-vue"
      }
    },
    "backend": {
      "dotnet": {
        "patterns": ["*.csproj", "*.sln", "Program.cs"],
        "plugin": "backend-dotnet-mssql"
      },
      "nodejs": {
        "patterns": ["package.json", "node_modules", "express", "fastify"],
        "plugin": "backend-nodejs"
      },
      "python": {
        "patterns": ["requirements.txt", "*.py", "django", "fastapi"],
        "plugin": "backend-python"
      }
    },
    "database": {
      "mssql": {
        "patterns": ["Microsoft.Data.SqlClient", "SqlServer"],
        "plugin": "backend-dotnet-mssql"
      },
      "postgresql": {
        "patterns": ["Npgsql", "pg", "postgres"],
        "plugin": "database-postgresql"
      },
      "mongodb": {
        "patterns": ["MongoDB.Driver", "mongoose"],
        "plugin": "database-mongodb"
      }
    }
  },
  "migrationInfo": {
    "fromVersion": "3.0.0",
    "toVersion": "4.0.0",
    "migrationScript": "scripts/migration/migrate-to-multi-framework.ps1",
    "changes": [
      "Reorganized into multi-framework plugin architecture",
      "Separated technology-agnostic components into core/",
      "Created framework-specific plugins in frameworks/",
      "Added plugin manifest system",
      "Implemented backward compatibility layer",
      "Enhanced framework detection for multiple technologies"
    ]
  }
}